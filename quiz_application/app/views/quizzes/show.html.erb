<p id="notice"><%= notice %></p>

<p>
  <strong>Genre:</strong>
  <%= @quiz.genre %>
</p>

<p>
  <strong>Sub genre:</strong>
  <%= @quiz.sub_genre %>
</p>

<table>
  <thead>
    <tr>
      <th>Quiz</th>
      <th>Question statement</th>
      <th>Option 1</th>
      <th>Option 2</th>
      <th>Option 3</th>
      <th>Option 4</th>
      <th>Correct options</th>

    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.quiz %></td>
        <td><%= question.question_statement %></td>
        <td><%= question.option_1 %></td>
        <td><%= question.option_2 %></td>
        <td><%= question.option_3 %></td>
        <td><%= question.option_4 %></td>
        <td><%= question.correct_options %></td>
        <td><%= link_to 'Show', question %></td>
        <td><%= link_to 'Edit', edit_question_path(question) %></td>
        <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'Edit', edit_quiz_path(@quiz) %> |
<%= link_to 'Back', quizzes_path %>
