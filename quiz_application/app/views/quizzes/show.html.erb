<p id="notice"><%= notice %></p>

<p>
  <strong>Genre:</strong>
  <%= @quiz.genre %>
</p>

<p>
  <strong>Sub genre:</strong>
  <%= @quiz.sub_genre %>
</p>

<table>
  <thead>
    <tr>
      <th>Quiz</th>
      <th>Question statement</th>
      <th>Option 1</th>
      <th>Option 2</th>
      <th>Option 3</th>
      <th>Option 4</th>
      <th>Correct options</th>

    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
  
    <%=form_tag({controller: 'questions',action:'show',id: question.id},{method: "get"})%>
      <tr>
        <td><%= question.question_statement %></td>
        <td><input type="checkbox" name="user_options[]" value=1><%= question.option_1 %></input></td>
        <td><input type="checkbox" name="user_options[]" value=2><%= question.option_2 %></input></td>
        <td><input type="checkbox" name="user_options[]" value=3><%= question.option_3 %></input></td>
        <td><input type="checkbox" name="user_options[]" value=4><%= question.option_4 %></input></td>
        <td><%= question.correct_options %></td>
        <td><input type="submit" value="Submit"></td>
        <!--td><%= link_to 'Show', question %></td-->
        <td><%= link_to 'Edit', edit_question_path(question) %></td>
        <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_quiz_path(@quiz) %> 
<%= link_to 'Back', quizzes_path %>